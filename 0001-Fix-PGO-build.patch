                      ('test_free_null', 'test/test_free_null.c'),
                      ('test_node', 'test/test_node.c'),
                      ('test_read_chunk', 'test/test_read_chunk.c'),
@@ -238,10 +237,10 @@ def build(bld):
                      ('test_writer', 'test/test_writer.c')]:
             bld(features     = 'c cprogram',
                 source       = prog[1],
